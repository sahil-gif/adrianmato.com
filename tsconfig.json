{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "types": [
      "@emotion/core",
      "@emotion/styled"
    ]
  },
  "exclude": [
    "**/*.ssr.ts"
  ]
}